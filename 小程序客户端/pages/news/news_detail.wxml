<view class="container">
  <loading hidden="{{loadingHide}}">
    {{loadingText}}
  </loading>

  <view class="title">新闻信息详情</view>
  <view class="news_detail_view"> 
      <view class="viewItem">
        <view class="label">新闻id：</view>
        <view class="content">
          <view>{{newsId}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">新闻标题：</view>
        <view class="content"> 
          <view>{{newsTitle}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">新闻图片：</view>
        <view class="content"> 
          <image mode="aspectFill" src="{{newsPhotoUrl}}"></image>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">新闻内容：</view>
        <view class="content"> 
          <view>{{newsContent}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">新闻日期：</view>
        <view class="content"> 
          <view>{{newsDate}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">新闻来源：</view>
        <view class="content"> 
          <view>{{newsFrom}}</view>
        </view>
      </view>

      <view>
        <navigator class="btnReturn" open-type="navigateBack" hover-class="navigator-hover">返回</navigator>
      </view>

  </view>
</view>
