.title {
  width: 100%;
  margin-top: 0px;
  padding: 20rpx;
  font-family: "微软雅黑";
  font-weight: bold;
  font-size: 36rpx;
  color: #fff;
  background: rgb(63, 180, 125);
  text-align: center;
}

.leaveword_add_view {
  width: 95%;
}

.leaveword_add_view form {
  display: flex;
  flex-direction: column;
}

.leaveword_add_view .formItem {
  display: flex;
  flex-direction: row;
  line-height: 35rpx;
  margin-top: 20rpx;
  justify-content: center;
  font-size: 35rpx;
  align-items: flex-start;
}

.leaveword_add_view .label {
  flex: 2; 
  text-align: right;
  font-weight: bold;
}

.leaveword_add_view .formControl {
  flex: 5; 
  margin-right: 20rpx;
  flex-direction: row;
}

.leaveword_add_view .formControl input {
  border: 1px solid olive;
  padding: 2px;
}

.leaveword_add_view .formControl textarea {
  width: 95%;
  border: 1px solid olive;
  padding: 15rpx;
  margin-right: 20rpx;
}

.leaveword_add_view .formControl .fileNameView {
  padding: 20rpx 0rpx;
  line-height: 50rpx;
  text-decoration: underline;
}

.leaveword_add_view .formControl .upfileBtn {
  display:flex;
  align-items: center;
  justify-content: center;
  border: 1px solid olive; 
  font-size: 32rpx;
  padding:20rpx;
  border-radius: 15rpx;
}

